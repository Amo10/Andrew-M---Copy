			isPopped = true;
			System.out.println("You over filled your "+ (color) + " Ballon with " + (air-100)+ " to menny " + (typeGas)+ "s it popped." );
			air = 0;
		
		}
		else {
			System.out.println("Your " + (color) + " balloon has " + (typeGas) + " molecules of air.");
		}
	}s){
		typeGas = newGas;
	}
